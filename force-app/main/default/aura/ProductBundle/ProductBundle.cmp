<aura:component controller="productBundle" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    
    <aura:method name="rerenderList" action="{! c.doInit}" />
    <aura:attribute name="noEmptyRecord" type="boolean" default="false"/>
    
    <!--declare attributes ParentProduct--> 
    <aura:attribute name="selectedProductData" type="Product2" default="{}" description="Use,for store SELECTED sObject Record"/>
    <aura:attribute name="listOfSearchRecords" type="List" description="Use,for store the list of search records which returns from apex class"/>
    <aura:attribute name="SearchKeyWord" type="string"/>
    <aura:attribute name="Message" type="String" default="Search Result.."/>
    
    <!--declare attributes ChildProduct-->
    <aura:attribute name="selectedChildProduct" type="List" description="Use,for store SELECTED sObject Record"/>
    <aura:attribute name="SearchUserKeyWord" type="string"/>
    <aura:attribute name="listOfUserSearchRecords" type="List" description="Use,for store the list of search records which returns from apex class"/>
    <aura:attribute name="newQuantity" type="List"  default="[{value:''},{value:''},{value:''}]"/>
    
    
    <!--declare events handlers-->  
    <aura:handler name="oRetailerdataEvent" event="c:ProductBundleEvent" action="{!c.handleComponentEvent}"/>
    <aura:handler name="change" value="{!v.newQuantity}" action="{!c.onChange}" />
    
    <div class="slds-page-header" role="banner">
        <div class="slds-grid">
            <div class="slds-col slds-has-flexi-truncate">
                <!-- HEADING AREA -->
                <h1 class="slds-page-header__title slds-truncate" title="">Create Bundle</h1>
                <!-- / HEADING AREA -->
            </div>
            <div class="slds-col slds-no-flex slds-grid slds-align-top">
                <button class="slds-button" name = "Create Bundle" onclick="{!c.fetchParent}"><b>Create </b></button>
                
            </div>
        </div>
    </div>
    
    <!-- Modal PopUp -->
    <div>
        <section aura:id="addModal" role="dialog" tabindex="-1"  aria-labelledby="customerdata" aria-modal="true" aria-describedby="customerBody" class="slds-modal">
            <div class="slds-modal__container">
                <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
                <header class="slds-modal__header">
                    <lightning:buttonIcon class="slds-modal__close" alternativeText="Close" iconName="utility:close" onclick="{!c.closeModal}" variant="bare-inverse" size="large"></lightning:buttonIcon>
                    <h1 id="customerdata" class="slds-text-heading_medium slds-hyphenate"><b>Create Bundle </b></h1>
                </header>
                <div  align='center' class="errorMissingSelected" id="errorMissingSelected"/>
                <div class="slds-modal__content slds-p-around_medium" id="customerBody" >
                    <table class="slds-table slds-table_bordered slds-table_cell-buffer">
                        <tr>
                            <td>
                                <div onmouseleave="{!c.onblur}" aura:id="searchRes" class="slds-form-element slds-lookup slds-is-close" data-select="single" style="width:250px">
                                    <label class="slds-form-element__label" for="horizontal-input-id-01"><b>Parent Product</b></label>                        
                                    <div class="slds-form-element__control">
                                        <div class="slds-input-has-icon slds-input-has-icon--right">
                                            <div aura:id="lookup-pill" class="slds-pill-container slds-hide">
                                                <lightning:pill class="pillSize" label="{!v.selectedProductData.Name}" name="{!v.selectedProductData.Name}" onremove="{!c.clear}">
                                                    <aura:set attribute="media">
                                                        <lightning:icon iconName="standard:account" size="x-small" alternativeText="close"/>
                                                    </aura:set>
                                                </lightning:pill>
                                            </div>
                                            <input type="hidden" id="errorMapFields" value=""/>                                                    
                                            <div aura:id="lookupField" class="slds-show">
                                                <lightning:icon class="slds-input__icon slds-show" iconName="standard:search" size="x-small" alternativeText="search"/>
                                                <span class="slds-icon_container  slds-combobox__input-entity-icon" title="record">
                                                    <lightning:icon class="slds-icon slds-icon slds-icon_small slds-icon-text-default" iconName="standard:account" size="x-small" alternativeText="icon"/>
                                                    <span class="slds-assistive-text"></span>
                                                </span>
                                                <ui:inputText  aura:id="searchValue" size="25"   updateOn="keyup" keyup="{!c.keyPressController}" class="slds-lookup__search-input slds-input leftPaddingClass" value="{!v.SearchKeyWord}" placeholder="search.." />
                                                <input type="hidden"  id='valueHolder'  name = "" value = ""  />                                                       
                                            </div>                                                
                                        </div>
                                        <!--This part is for Display typehead lookup result List-->
                                        <ul style="min-height:40px;width:291px;margin-right:68px;" class="slds-listbox slds-listbox_vertical slds-dropdown slds-dropdown_fluid slds-lookup__menu slds" role="listbox">
                                            <lightning:spinner class="slds-hide" variant="brand" size="small" aura:id="mySpinner"/>
                                            <center> {!v.Message}</center>
                                            <aura:iteration items="{!v.listOfSearchRecords}" var="singleRec">
                                                <c:customLookupforRetailerdata oRetailer="{!singleRec}" IconName="standard:account"  />
                                                
                                            </aura:iteration>
                                        </ul>
                                    </div>
                                    
                                </div>
                            </td>
                            <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>                            
                            <td>
                                <div onmouseleave="{!c.onblur}" aura:id="searchUserRes" class="slds-form-element slds-lookup slds-is-close" data-select="single" style="width:250px">
                                    <label class="slds-form-element__label" for="horizontal-input-id-01"><b>Child Product</b></label>                        
                                    <div class="slds-form-element__control">
                                        <div class="slds-input-has-icon slds-input-has-icon--right">
                                            <div aura:id="lookupUserField" class="slds-show">
                                                <lightning:icon class="slds-input__icon slds-show" iconName="standard:search" size="x-small" alternativeText="search"/>
                                                <span class="slds-icon_container  slds-combobox__input-entity-icon" title="record">
                                                    <lightning:icon class="slds-icon slds-icon slds-icon_small slds-icon-text-default" iconName="standard:account" size="x-small" alternativeText="icon"/>
                                                    <span class="slds-assistive-text"></span>
                                                </span>
                                                <ui:inputText  aura:id="searchUserValue" size="25"   updateOn="keyup" keyup="{!c.keyPressUserController}" class="slds-lookup__search-input slds-input leftPaddingClass" value="{!v.SearchUserKeyWord}" placeholder="search.." />
                                                <input type="hidden"  id='valueHolder'  name = "" value = ""  />                                                       
                                            </div>                                                
                                        </div>
                                        <!--This part is for Display typehead lookup result List-->
                                        <ul style="min-height:40px;width:291px;margin-right:68px;" class="slds-listbox slds-listbox_vertical slds-dropdown slds-dropdown_fluid slds-lookup__menu slds" role="listbox">
                                            <lightning:spinner class="slds-hide" variant="brand" size="small" aura:id="mySpinner"/>
                                            <center> {!v.Message}</center>
                                            <aura:iteration items="{!v.listOfUserSearchRecords}" var="singleRec">
                                                <c:customLookupforChildProduct oUser="{!singleRec}" rowIndex="{!index}" IconName="standard:account"  />
                                            </aura:iteration>
                                        </ul>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <br/>
                        <tbody>
                            <tr>
                                <!--<div aura:id="msg" class="hide">-->
                                <aura:iteration items="{!v.selectedChildProduct}" var="user" > 
                                    <div aura:id="lookupUser-pill" class="slds-pill-container" style="width:250px">
                                        <lightning:pill class="pillSize" label="{!user.Name}" name="{!user.Id}" onremove="{!c.clearUser}">
                                            <aura:set attribute="media">
                                                <lightning:icon iconName="standard:account" size="x-small" alternativeText="close"/>
                                            </aura:set>
                                        </lightning:pill>
                                        
                                    </div>
                                    <lightning:input class="quant" aura:id="contactField" type="number" value="{!user.Quantity_temp_holder__c}" Name="Add Quantity" label ="Add Quantity*" placeholder="type here..." />
                                </aura:iteration> 
                                
                                <!--</div>-->
                            </tr>
                        </tbody>
                        <br/>        
                        
                    </table>
                    <br/>
                    <button style="float:right;" class="slds-button slds-button_brand" onclick="{!c.Save}"><b>Save</b></button>
                </div>                
            </div>
        </section>
        <div aura:id="addModalBackdrop" class="slds-backdrop"></div>
    </div>
    <!-- Modal PopUp --> 
    <!--Calling search component Start-->
    <!--<c:ProductBundleProduct />-->	
    <!--Calling search component End-->
</aura:component>